            "sources": [
                {
                    "type": "git",
                    "url": "https://gitlab.gnome.org/GNOME/glib-networking.git"
                }
            ]
        },
        {
            "name": "vala-bootstrap",
            "cleanup": [ "/bin/*-0.16",
                         "/lib/*-0.16*",
                         "/lib/pkgconfig/*",
                         "/include/vala-0.16",
                         "/share/vala-0.16" ],
            "cleanup-platform": [ "*" ],
            "config-opts": [ "--disable-build-from-vala",
                             "--disable-vapigen" ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://gitlab.gnome.org/Archive/vala-bootstrap.git"
                }
            ]
        },
        {
            "name": "vala",
            "cleanup-platform": [ "*" ],
            "config-opts": [ "--enable-vapigen", "--enable-unversioned" ],
            "rm-configure": true,
            "sources": [
